<div class="container">
  <div class="row">
    <div class="col-sm-12 mt-5">
      <h4>新規登録</h4>
    </div>
  </div>

  <div class="form-group row mt-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group row form-inline">
            <%= f.label :last_name,"名前" ,class: "col-sm-4 col-form-label" %>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" ,class: "form-control col-sm-3",placeholder: "姓",autfocus: true %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",placeholder: "名", class: "form-control col-sm-3 offset-1" %>
          </div>

          <div class="form-group row form-inline">
            <%= f.label :is_gender,"性別",class: "col-sm-4 col-form-label"  %>
            <%= f.label :man,"男性" ,class:"mr-1",autfocus: true%>
            <%= f.radio_button :is_gender, :man ,class:"mr-4" %>
            <%= f.label :woman,"女性",class:"mr-1" %>
            <%= f.radio_button :is_gender, :woman %>
          </div>

          <div class="form-group row form-inline">
            <%= f.label :phone_number,"電話番号" ,class: "col-sm-4 col-form-label" %>
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number",class: "form-control col-sm-8",placeholder: "ハイフンなし" %>
          </div>

          <div class="form-group row form-inline">
            <%= f.label :email,"メールアドレス",class: "col-sm-4 col-form-label"  %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control col-sm-8" %>
          </div>

          <div class="form-group row form-inline">
            <%= f.label :password ,class: "col-sm-4 col-form-label"  %>
            <% if @minimum_password_length %>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password",class: "form-control col-sm-8",placeholder: "半角英数字 #{@minimum_password_length } 文字以上" %>
          </div>

          <div class="form-group row form-inline">
            <%= f.label :password_confirmation,"パスワード確認",class: "col-sm-4 col-form-label"   %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control col-sm-8" %>
          </div>

          <div class="action col-sm-12 mt-4">
            <%= f.submit "新規登録" ,class: "btn btn-info col-sm-6"%>
            <%= link_to "キャンセル", root_path ,class: "btn btn-light ml-3 col-sm-5"%>
          </div>

          <div class="guest_login col-sm-12 mt-3">
          <%= link_to "ゲストログイン（閲覧用）",users_guest_sign_in_path, method: :post,class: "btn btn-outline-secondary btn-sm " %>
          </div>

          <div class="messege col-sm-8 mt-3 ml-2">
          <small><%= link_to ">> 登録済みの方はこちら", new_user_session_path %></small>
          </div>

          <%= link_to 'Twitterで登録', user_twitter_omniauth_authorize_path, method: :post%>
          <%= link_to 'Googleで登録', user_google_oauth2_omniauth_authorize_path, method: :post%>
          <%if @sns_id.present? %>
             <%= hidden_field_tag :sns_auth, true %>
           <% else %>
             <div class="field">
               <%= f.label :password %>
               <% @minimum_password_length %>
               <em>(<%= @minimum_password_length %> characters minimum)</em>
               <br />
               <%= f.password_field :password, autocomplete: "new-password" %>
             </div>
          
             <div class="field">
               <%= f.label :password_confirmation %><br />
               <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
             </div>
           <% end %>

      <% end %>
  </div>
</div>

