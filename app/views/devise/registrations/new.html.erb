<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

     <div class="field">
      <%= f.label :last_name,"姓" %><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    </div>
    <div class="field">
      <%= f.label :first_name,"名" %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>

    <div class="field">
        <%= f.label :is_gender,"性別" %><br />
        <%= f.label :man,"男性" %>
        <%= f.radio_button :is_gender, :man  %>
        <%= f.label :woman,"女性" %>
        <%= f.radio_button :is_gender, :woman  %>
      </div>
        <div class="field">
          <%= f.label :phone_number,"電話番号（ハイフンなし）" %><br />
          <%= f.number_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
        </div>


    <div class="field">
      <%= f.label :email,"メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>（半角英数字 <%= @minimum_password_length %> 文字以上）</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation,"パスワード（もう一度）" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
    <% end %>

    <div><small>
      <%= link_to "登録済みの方はこちら", new_user_session_path %>
    </small></div>
