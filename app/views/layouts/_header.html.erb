<div class="border">
 <div class="hed pl-1">手間と時間をかけないレシピがここにある</div>
  <header class="shadow-sm">
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand p-3">
          <%= link_to root_path do %>
           <%= image_tag 'logo.png', :size =>'140x100'%>
          <% end %>
        </a>

        <div class="navbar-nav ml-auto mt-3">
         <div class="nav-item-search">
          <%= search_form_for @search , url: seachs_path do |f| %>
           <%= f.search_field :name_cont, placeholder: "レシピ名を検索", class: "search_input p-3"%>
            <%= f.button :type => "submit",  :class => "search_submit" do %>
              <i class="fa fa-search" aria-hidden="true"></i>
            <% end %>
          <% end %>
         </div>


      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown">
         <span class="navbar-toggler-icon"><i class="fa fa-bars" aria-hidden="true"></i></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarNavDropdown">

           <% if user_signed_in? %>
           <ul>
             <li class="nav-item">
               <%= link_to "レシピ投稿", new_recipe_path,class: "mx-4 my-1 mr-4" %>
             </li>
             <li class="nav-item">
               <%= link_to "マイページ", "/users/#{current_user.id}",class: "mx-4 my-1 mr-4" %>
             </li>
             <li class="nav-item notify mx-4 my-1 mr-4">
               <%= render partial: 'notifications/index',locals: { notifications: @notifications }, remote: true %>

             </li>
            </ul>
         <% else %>
            <ul>
             <li class="nav-item">
               <%= link_to "新規登録", new_user_registration_path,class: "mx-4 my-1 mr-4"  %>
             </li>
             <li class="nav-item">
               <%= link_to "ログイン", new_user_session_path ,class: "mx-4 my-1 mr-4"%>
             </li>
            </ul>
          <% end %>

      </div>
     </div>
    </nav>
  </header>
</div>
</div>
