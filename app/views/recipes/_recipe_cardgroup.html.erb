   <div class="card-group mt-4 mb-4">
  <% recipes.each do |recipe| %>
   <div class="col-3">
    <div class="card shadow-sm">
    <%= link_to recipe_path(recipe) do %>
      <%= attachment_image_tag recipe, :image, fallback: "no-image-recipe.png", class: 'card-img-top' %>
   <% end %>
       <h5 class="card-title text-center  font-weight-bold font-large mt-1"><%= link_to  recipe.name,recipe_path(recipe) %></h5>
       <p class="card-text text-center">お気に入り登録 🤍<%= recipe.favorites.count %></p>
       <p class="card-text text-center mb-2"><small>by <%= link_to  recipe.user.nickname,user_path(recipe.user) %></small>
        <%= attachment_image_tag recipe.user, :image, :fill, 30, 30, fallback: "no-image-icon.png" %></p>
    </div>
   </div>
  <% end %>
 </div>

